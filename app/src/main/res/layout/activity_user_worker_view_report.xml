<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a404_notfound.sourceappwater.controllers.UserWorkerViewReport">

    <Button
        android:id="@+id/seeUserReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeYourReport"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/button_style"
        android:text="@string/go_to_user_reports" />

    <Button
        android:id="@+id/seeYourReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seeUserReport"
        android:layout_marginTop="78dp"
        android:background="@drawable/button_style"
        android:text="@string/go_to_my_reports" />
</RelativeLayout>
